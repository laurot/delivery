<?xml version = "1.0" encoding = "UTF-8"?>

<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"   "http://mybatis.org/dtd/mybatis-3-mapper.dtd">

<mapper namespace="com.solvd.dao.ILanguageDAO">
    <resultMap type = "com.solvd.bin.Languages" id = "LanguagesResultMap" autoMapping="false"/>
        <id column = "language_id" property = "id"/>
        <result column = "language_name" property = "name"/>
    </resultMap>

    <insert id="saveEntity" useGeneratedKeys="true" keyProperty="id">
        <![CDATA[insert into language (name) values (name]]>
    </insert>
    <update id = "updateEntity">
        <![CDATA[update language set name =  where id_store = 1 and id_product = 2;]]>
    </update>
    <delete id="deleteEntityById">
        <![CDATA[delete from user where id = #{id}]]>
    </delete>
    <select id = "getEntityById">
        <![CDATA[select * from user where id = #{id}]]>
    </select>
</mapper>